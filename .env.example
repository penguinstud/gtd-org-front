# Application Configuration
NEXT_PUBLIC_APP_NAME="GTD Org Front"
NEXT_PUBLIC_APP_VERSION="0.1.0"

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Org-mode Integration
# Path to your work org files directory
ORG_WORK_DIR=~/Org
# Path to your home org files directory  
ORG_HOME_DIR=~/HomeOrg
# Enable file watching for real-time sync
ORG_WATCH_FILES=true
# Backup directory for org file modifications
ORG_BACKUP_DIR=~/.org-backups

# File System Configuration
# Enable automatic backups before modifications
ENABLE_AUTO_BACKUP=true
# Maximum number of backups to keep
MAX_BACKUP_COUNT=10

# UI Configuration
# Default context (work or home)
NEXT_PUBLIC_DEFAULT_CONTEXT=work
# Enable animations and transitions
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
# Theme preference (light, dark, system)
NEXT_PUBLIC_DEFAULT_THEME=light

# Development Features
# Enable debug mode for additional logging
DEBUG=false
# Show development tools in production
SHOW_DEV_TOOLS=false

# External Integrations (Future)
# EMACS_SERVER_HOST=localhost
# EMACS_SERVER_PORT=9999
# GITHUB_TOKEN=your_github_token_here
# NOTION_API_KEY=your_notion_key_here